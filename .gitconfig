[user]
	email = branmovic@gmail.com
	name = Bran van der Meer

[push]
	default = simple

[core]
	editor = emacs
	autocrlf = input
	excludesfile = /Users/bvandermeer/.gitignore_global

[alias]
	c = commit -m
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an>%Creset' --abbrev-commit -15
	lf = log --pretty=format:'%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate --numstat
	shw = show --pretty=format:'hash:    %C(green)%h%C(reset) %nparent:  %C(red)%p%C(reset)%nref:     %C(yellow)%D%C(reset)%nauthor:  %an <%ae>%ndate:    %ad%nmessage: %s%n'
	sh = !git shw --no-patch
	shp = !git shw --patch
	s = status
	f = fetch -pt
	co = checkout
	cob = checkout -b
	d = diff

[branch]
	autosetuprebase = always

[color]
	ui = always
